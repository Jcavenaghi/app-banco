<h1 class="text-center fw-bold"> Mis turnos</h1>

<div class="container">
  <div id="turns" class="row">
    <% @turns.each do |turn| %>
      <div class="card border border-2 my-3 bg-light">
        <%= render turn %>
        <p class="card-text text-center mb-3">
          <%= link_to "Ver turno", turn %>
        </p>
      </div>
    <% end %>
  </div>
</div>
