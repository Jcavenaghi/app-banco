<h2>Información de  <%= current_user.email %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class = "card bg-light m-2 border border-5 border-info">
    <div class = "card-body text-center">
      <div class="field mb-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, disabled: true, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password %> <i>(Dejar en blanco si no desea cambiarla)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", required: true%>
        <% if @minimum_password_length %>
          <br />
          <em>Minimo <%= @minimum_password_length %> cáracteres</em>
        <% end %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
      </div>

      <div class="field mb-3">
        <%= f.label :current_password %> <i>(Necesaria para confirmar los cambios)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Update" %>
      </div>
    </div>
  </div>
<% end %>
