<h1 class="text-center fw-bold my-4">Sucursales del banco</h1>
<% if current_user %>
    <p class="text-center fs-4"> Bienvenido <%= current_user.email %>. Aqu√≠ podra visualizar todas
    las sucursales del banco </p>
    <div class="container">
        <div id="branch_offices", class="row">
            <% @branch_offices.each do |branch_office| %>
                <div class="card border border-2 my-3 bg-light">
                    <%= render branch_office %>
                    <p class="card-text text-center mb-3">
                    <%= link_to "Sacar turno", new_turn_path(:branch_office_id => branch_office.id) %>
                    </p>
                </div>
            <% end %>
        </div>
    </div>
        
<% end %>
